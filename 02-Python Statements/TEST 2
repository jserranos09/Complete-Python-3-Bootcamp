4: 
st = 'Print every word in this sentence that has an even number of letters'
  
for word in st.split():
    if len(word)%2==0:
        
        print(word)


5:
  
for num in range(1,101):
    if num %3==0 and num %5==0:
        print('FizzBuzz')
    elif num %3==0:
        print('Fizz')
    elif num% 5==0:
        print('Buzz')
    else:
        print(num)




